#!/usr/bin/env ruby
ENV['RACK_ENV'] ||= 'development'
# load path
lib_path = File.expand_path('../../lib', __FILE__)
($:.unshift lib_path) unless ($:.include? lib_path)

# require farm
require 'bundler'
Bundler.require(:default, ENV['RACK_ENV'])
require 'pry'
require 'hyperdrive'

# fire up the ftl drive
Pry.start
